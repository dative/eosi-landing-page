{#

Button component

Usage:

{% include '_partials/_button.twig' with {
  content: 'See How it Works ',
  variant: 'primary',
  adjust: true
} %} 

variants: primary, secondary, emphasis and video
adjust: margin-auto

#}
{% if content is defined and content %}
  {% set variant =  variant is defined and variant ? 'btn-' ~ variant : 'btn-primary' %}
  {% set adjust =  adjust is defined and adjust ? true : false %}
  <button type='button' class='{{ variant }} {{ adjust ? "mx-auto" : "" }}'>
    {% if variant == 'btn-video' %}
      <picture>
        <img src="data:image/svg+xml,%3Csvg width='26' height='26' fill='none' 
        xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10.5 18.625 18 13l-7.5-5.625v11.25ZM13 
        .5C6.1.5.5 6.1.5 13S6.1 25.5 13 25.5 25.5 19.9 25.5 13 19.9.5 13 .5ZM13 23C7.4875 23 3 
        18.5125 3 13S7.4875 3 13 3s10 4.4875 10 10-4.4875 10-10 10Z' fill='%23F8F8F8'/%3E%3C/svg%3E"
        alt="play button">
      </picture>
    {% endif %}
    {{ content }}
  </button>
{% endif %}


