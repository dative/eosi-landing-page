<footer id='site-footer' class='max-w-desktop mx-auto p-[15px] mt-[-52px] desktop:mt-[-35px] desktop:p-0'>
  <button type='button' class='flex p-5 w-[225px] bg-blue-700 text-[24px] leading-[38px] justify-center text-white rounded-full font-bold mx-auto desktop:w-[282px] desktop:h-[77px] desktop:font-semibold desktop:text-[32px] desktop:leading-[48px] desktop:p-4'>
    Letâ€™s fix it.
  </button>
  
  <section class=' desktop:flex desktop:gap-[30px] mt-10 desktop:mt-[162px] mb-[64px] desktop:mb-[111px]'>
    <div class='middle:max-w-[525px] middle:mx-auto desktop:max-w-[684px] desktop:mx-0'>
      <h2 class='font-bold text-3xl text-center leading-10 desktop:font-normal desktop:text-[44px] desktop:leading-[48px] desktop:text-left'>
        <strong class='font-bold'>Take better control</strong> of your biological and 
        contaminant removal process.
      </h2>
      {% include '_partials/_checkList.twig' with {
        content: checkList
      } %}
    </div>
  
    <div class='relative middle:w-[525px] middle:mx-auto'>
      <div class='w-[92px] h-[92px] dot-grid relative mt-[13px] desktop:mt-0 desktop:left-[-44px] desktop:top-[-36px]'></div>

      <div id='form-container' class='bg-white rounded-lg p-[30px] shadow-form mt-[-45px] relative z-10 middle:mx-auto desktop:mt-[-80px]'>
        
        <div id='close-form'>
          <div class='mb-[45px]'>
            <h2 class='text-center font-extrabold text-[32px] leading-[42px]'>
                We can help.
            </h2>

            <p class='text-gray-700 text-center text-[22px] leading-[36px]'>
              Learn how you can optimize your removal process reliably and cost-effectively.
            </p>
          </div>

          <form class='flex flex-col gap-7'>
            {% for field in formfiels %}
              {% include '_fieldTypes/_' ~ field.type ~ '.twig' ignore missing with {
                field: field
              } only %}
            {% endfor %}

            <button type='button' class='flex w-full bg-secondary justify-center items-center p-5 
              text-white rounded-full font-bold' data-button>
              Send me more information
            </button>
          </form>
        </div>
      </div>
      <div class='w-[92px] h-[92px] dot-grid absolute pb-[18px] right-0 mt-[-45px] z-0 desktop:right-[-45px]'></div>
    </div>
  </section>
</footer>
