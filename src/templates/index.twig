{% extends '_layouts/_generic_page_layout.twig' %}

{% block headLinks %}
  {{ parent() }}
  <link rel='amphtml' href='/amp' />
  <title>EOSi | Empowering Clean Water ®</title>
{% endblock %}

{% block content %}
  <section class='max-w-des mx-auto px-[15px] pt-[15px] des:px-0'>
    {% include "_partials/_videoBox.twig" with {
      heading: "Never worry about your <strong class='font-bold mid:font-extrabold'>wastewater permit limits</strong> again.",
      videoUrl: 'https://www.youtube.com/watch?v=Oddo4MVeeBY&ab_channel=LynyrdSkynyrd-Topic'
    } %}
  </section>

  <section class='bg-blue-700 mt-[-140px] des:mt-0 py-[30px]'>
    <div class='max-w-[706px] mx-auto px-[15px] des:px-0'>
      <h2 class='text-2xl font-normal leading-8 text-center text-white pt-[140px] pb-[25px] des:p-0 des:text-[28px] des:leading-[36px] des:mb-[14px]'>
        Empowering Clean Water® by enhancing the biological removal of harmful nutrients in wastewater.
      </h2>

      <button 
        type='button' 
        data-video='https://www.youtube.com/watch?v=P5ZJui3aPoQ&ab_channel=kansasVEVO' 
        class='flex gap-[9px] bg-transparent justify-center items-center px-4 py-3 text-white text-[16px] rounded-full font-bold border-2 border-white mx-auto hover:bg-blue-900'>
        <div class='play-button w-[25px] h-[25px]'></div>
        See How it Works 
      </button>
    </div>
  </section>

  <section class='bg-white pt-[34px] pb-[104px] des:pt-[76px] des:pb-[130px]'>
    <div class='max-w-des mx-auto'>
      <div class='flex px-[15px] flex-wrap mid:flex-col des:flex-row justify-center items-center gap-x-[16px]
        des:relative des:px-0 des:justify-start des:items-start des:gap-[92px]'>
        {% include '_partials/_computer.icon.twig' %}

        <div class='w-[224px] mid:w-[445px] mid:pt-[30px] des:w-[726px] des:pt-0'>
          <h2 class='text-[18px] leading-[22px] font-normal mid:text-[44px] mid:leading-[48px] mid:text-center des:font-normal des:gap-x-[92px] des:max-w-[736px] des:text-left'>
            Are you having <strong class='font-extrabold'>issues</strong> with your wastewater treatment process?
          </h2>
        </div>

        {% include '_partials/_list.twig' with {
          content: [
            {text: '<strong>Inconsistent</strong> nutrient removal levels.'},
            {text: '<strong>Inaccurate</strong> supplemental carbon dosing.'},
            {text: '<strong>Inadequate</strong> delivery and product quality.'}
          ]
        } %}
      </div>
    </div>
  </section>
{% endblock %}

{% block subcontent %}
{% endblock %}

{# -- Any JavaScript that should be included before </body> -- #}
{% block bodyJs %}
  {{ parent() }}
{% endblock %}
